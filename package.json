{
  "name": "vee-validate-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Template Based Validation for Vue.js",
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT",
  "homepage": "https://logaretm.github.io/vee-validate/",
  "repository": "https://github.com/logaretm/vee-validate",
  "scripts": {
    "test": "jest",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier \"./**/*.ts\" --write",
    "build": "node scripts/build.js",
    "cover": "jest --coverage",
    "postversion": "npm run build",
    "docs:dev": "cd ./docs && npm run dev && cd -",
    "docs:deploy": "./scripts/deploy-docs.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.13",
    "@types/yup": "^0.29.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "chalk": "^4.1.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "filesize": "^6.1.0",
    "flush-promises": "^1.0.2",
    "fs-extra": "^9.0.0",
    "gzip-size": "^5.1.1",
    "husky": "^4.2.5",
    "jest": "^26.5.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "raf-stub": "^3.0.0",
    "rollup": "^2.30.0",
    "rollup-plugin-dts": "^1.4.12",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "terser": "^5.3.5",
    "ts-jest": "^26.4.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.0.2",
    "vue": "^3.0.0",
    "yup": "^0.29.3"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "eslintIgnore": [
    "locale",
    "dist",
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --edit -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ],
    "*.js": [
      "eslint --fix",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ]
  }
}
