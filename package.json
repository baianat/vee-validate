{
  "name": "vee-validate-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Form Validation for Vue.js",
  "author": "Abdelrahman Awad <logaretm1@gmail.com>",
  "license": "MIT",
  "homepage": "https://vee-validate.logaretm.com",
  "repository": "https://github.com/logaretm/vee-validate",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci --detectOpenHandles --runInBand",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier \"./**/*.ts\" --write",
    "build": "node scripts/build.js",
    "cover": "jest --coverage",
    "cover:ci": "jest --coverage --ci --runInBand --detectOpenHandles",
    "postversion": "npm run build",
    "docs:dev": "cd ./docs && npm run dev && cd -",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chalk": "^4.1.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "filesize": "^6.1.0",
    "flush-promises": "^1.0.2",
    "fs-extra": "^9.0.0",
    "gzip-size": "^6.0.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "raf-stub": "^3.0.0",
    "rollup": "^2.39.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-dts": "^2.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "0.29.0",
    "terser": "^5.6.0",
    "ts-jest": "^26.5.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.1.5",
    "vue": "^3.0.0",
    "yup": "^0.32.9"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ],
    "*.js": [
      "eslint --fix",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ]
  }
}
